[Unit]
Description=DataPurity Frontend Service
After=network.target

[Service]
Type=simple
User=www-data
WorkingDirectory=/opt/datapurity/frontend
ExecStart=/usr/bin/npx serve -s dist -l 3000
Restart=always
RestartSec=10
StandardOutput=journal
StandardError=journal
SyslogIdentifier=datapurity-frontend

Environment=NODE_ENV=production
Environment=PORT=3000

[Install]
WantedBy=multi-user.target
